<section style="height 100vh">
    <div style=" background: url(/images/loginsecbg.jpeg); background-size:cover;  height: 100vh;">
    <div class="container">
        <div class="loginbg">
            <a href="/" class="btn btn-secondary" id="back2land"><i class="fa fa-mail-reply"></i></a>
            <div class="logincard">
                <div class="circlebg"> <h3>Login</h3>
                <div class="loginuserIcon"><i class="fa fa-user"></i></div>
                </div>
                <div class="loginform">
                        <form class="stdLoginForm" id="stdloginForm" action="" method="post" >
                        <input type="number" maxlength="10" placeholder="Mobile-No" minlength="10" name="Mobile" ><br>
                        <input type="password" name="Password" placeholder="Password"><br>
                        <h4 class="loginError1">Invalid Login</h4>
                        <i onclick="showoptions()" class="fa fa-gear fa-spin" style="font-size:24px"></i>
                        <div class="passwordoptions1">
                            <p onclick="creatPassWordForm()">create NEW</p>
                            <p onclick="creatPassWordForm()">Forgot password</p>
                            <p onclick="OtpLogin()">Login with OTP</p>
                        </div>
                        <button style="transition: 1s ; background-color: rgba(246, 126, 83, 0.835);" class="btn " type="submit">Login</button>
                        </form>

                        <form action="" id="MobileCheck" class="stdCreatePassword1">
                            <i onclick="backToLogin()" class="fa fa-times-circle"></i>
                            <input type="number" id="Mob_no" name="Mobile"  placeholder="Mobile-No" ><br>
                            <button type="submit" class="btn btn-primary">Send OTP</button>
                            <p class="errorh21" style="color: red;">Cannot Find This Number</p>
                        </form>

                        <form id="stdOtp" class="stdOtp1" action="">
                            <p class="errotp1">Incorrect OTP</p>
                            <input type="number" name="OTP" placeholder="OTP">
                            <button class="btn btn-primary">Sumbit</button>
                        </form>

                        <form class="stdNewpassword1" id="NewPasswordForm" action="">
                            <input type="password" id="Newpswrd" name="Password" placeholder="New password"><br><br>
                            <input type="password" onchange="repasword()" id="re-entrpswrd" name="Re-enterPassword" placeholder="Re-enter password"><br><br>
