<section style="background-color: black ; height: 91vh; margin-top: -40px;">
<div class="container">
    <div class="assignmentbg">
    <div class="assignmentForm">       
<form  id="notesupload" class="videoNoteform" method="POST" action="/admin/notes" enctype="multipart/form-data">
<h3>Add New </h3>
<input type="text" name="Name" placeholder="Topic Name"><br>
<label for="">Pdf</label>
<input type="file" name="File" accept="application/pdf,application/vnd.ms-excel"  id="File"><br>
<label  for="">Video</label>
<input type="file" name="Video" accept="video/*" placeholder="Video">
<button type="button" onclick="addLink()">Add link</button>
<button type="submit" id="uploadbtn">upload</button>
</form>
<form action="/admin/linkNotes" class="linkNoteform1" method="post" enctype="multipart/form-data">
<h3>Add New </h3>
<input type="text" name="Name" placeholder="Topic Name"><br>
<label for="">Pdf</label>
<input type="file" name="File" accept="application/pdf,application/vnd.ms-excel"  id="File"><br>
<label  for="">Video</label>
<input type="url" name="Video_Link" placeholder="Paste The Link">
<button type="button" onclick="addVideo()">Add video</button>
<button type="submit" id="uploadbtn">upload</button>
</form>
</div>
<div class="assignmentTable">
    <h4>Notes</h4>
<table class="table">
<thead>
    <tr>
        <th>Topic</th>
        <th>File</th>
        <th>Video</th>
        <th>Option</th>
    </tr>
</thead>
<tBody>
    {{#each notes}}
    <tr id="tr{{this._id}}">
        <td>{{this.Name}}</td>
        <td>{{#if this.fileName}}<a href="/admin/view-Notes?id={{this._id}}">{{this.fileName}}</a>{{else}}No pdf {{/if}}</td>
        <td>{{#if this.video}}<a href="/admin/view-Video?id={{this._id}}">Click Me</a>{{else}}No video {{/if}}</td>
        <td class="assgnmtTable"><button onclick="deleteNotecnfrm('{{this._id}}') " class="btn-danger"><i  class="fa fa-trash"></i></button></td>
    <div class="deleteassignmentcnfrm1">
        <h3>Delete this Topic</h3>
        <button onclick="deleteNote()" class="btn btn-success">Yes</button> <a class="btn btn-danger" href="/admin/notes"> No</a>
    </div>
    </tr>
    {{/each}}
</tBody>
</table>
</div>
   
</div>
</div>



</section>