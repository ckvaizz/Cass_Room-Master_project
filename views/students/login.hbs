                            <button type="submit" class="btn btn-success">Save</button>
                        </form>

                        <form action="" class="otpLogin1" id="OtpLogin">
                            <input type="tel" name="Mobile" onchange="otp_Mob()" id="otp-Mob" placeholder="Mobile-No">
                            <p class="otp-mob-err1">Can't send otp to this number </p>
                             <p class="wait4otp1">wait for OTP</p>
                            <input type="number" name="Otp" id="otp-Otp" placeholder="OTP">
                           
                            <p class="otp-Err1">Invalid OTP</p>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                        

                </div>
            </div>
        </div>
    </div>
    </div>
