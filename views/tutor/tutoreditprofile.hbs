<section style="background-color: black; height: 100%; margin-top: -37px;width:100%;">
    <div class="container">
            <div class="row col-md-12">
              {{#if profile}}
                <form   id="turorForm" class="edittutorprofile">
                    <legend>Edit Tutor</legend>
                    <div class="form-control">
                        <label for="Name"> Name:</label> <input type="text" name="Name" value="{{profile.Name}}" id="">
                    </div>
         
      <div class="col-sm-10">
        <div class="form-check">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
          <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Male" checked>
          <label class="form-check-label" for="gridRadios1">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Female">
          <label class="form-check-label" for="gridRadios2">
            Female
          </label>
        </div>
      </div>
      <div class="form-control">
          <label for="Class">Class</label> <input type="text" value="{{profile.Class}}" name="Class">
      </div>
       <div class="form-control">
          <label for="Mobile">Mobile</label> <input type="number"value="{{profile.Mobile}}" name="Mobile">
      </div>
       <div class="form-control">
          <label for="Email">Email</label> <input type="Email" value="{{profile.Email}}" name="Email">
      </div>
       <div class="form-control">
          <label for="Address">Address</label> <input type="text" value="{{profile.Address}}" name="Address">
      </div>
      <div class="form-control">
          <label for="Job">Job</label> <input type="text" value="{{profile.Job}}" name="Job">
      </div>
      <div class="form-control">
          <button  style="background-color: green;">Save </button>
          <button style="background-color: red;" > Cancel</button>
      </div>
                </form>{{else}}
                <form action="" method="POST" class="edittutorprofile">
                    <legend>Add Profile</legend>
                    <div class="form-control">
                        <label for="Name"> Name:</label> <input type="text" name="Name" id="">
                    </div>
         
      <div class="col-sm-10">
        <div class="form-check">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
          <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Male" checked>
          <label class="form-check-label" for="gridRadios1">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Female">
          <label class="form-check-label" for="gridRadios2">
            Female
          </label>
        </div>
      </div>
      <div class="form-control">
          <label for="Class">Class</label> <input type="text" name="Class">
      </div>
       <div class="form-control">
          <label for="Mobile">Mobile</label> <input type="number" name="Mobile">
      </div>
       <div class="form-control">
          <label for="Email">Email</label> <input type="Email" name="Email">
      </div>
       <div class="form-control">
          <label for="Address">Address</label> <input type="text" name="Address">
      </div>
      <div class="form-control">
          <label for="Job">Job</label> <input type="text" name="Job">
      </div>
      <div class="form-control">
          <button type="submit" style="background-color: green;">Save </button>
          <button style="background-color: red;" > Cancel</button>
      </div>
                </form>
                {{/if}}
            </div>
    </div>
    <div class="editconfirm1">
      <h1>
        Are you sure
      </h1>
      <button class="btn-success" onclick="submitprofile()">Yes</button> <button class="btn-danger">No</button>
    </div>
</section>